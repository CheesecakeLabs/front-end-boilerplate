{
  "extends": "cheesecakelabs/react",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": ["react", "babel"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.base.js"
      }
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.dev.js",
          "**/*.test.js",
          "**/*.stories.js",
          "server.js",
          "next.config.js",
          "postcss.config.js",
          "webpack.config.*",
          "storybook/*"
        ]
      }
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ]
      }
    ]
  },
}
